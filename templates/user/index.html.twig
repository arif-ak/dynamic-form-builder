{% extends 'base.html.twig' %}

{% block title %}Forms listing{% endblock %}

{% block body %}
    <h1>Forms listing</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dynamic_form in dynamic_forms %}
            <tr>
                <td>{{ dynamic_form.id }}</td>
                <td>{{ dynamic_form.title }}</td>
                <td>{{ dynamic_form.description }}</td>
                <td>
                    <a href="{{ path('dynamic_form_user_show', {'id': dynamic_form.id}) }}">View form</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
