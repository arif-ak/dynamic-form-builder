{% extends 'base.html.twig' %}

{% block title %}DynamicForm{% endblock %}

{% block body %}

    <div class="text-center">
        <h2>{{ dynamic_form.title }}</h2>
        <h5>{{ dynamic_form.description }}</h5>
    </div>

    <div class="form-row">
        <div class="col-8 text-center"><h5>Question</h5></div>
        <div class="col-4 text-center"><h5>Response</h5></div>
    </div>
    <hr/>

    <div id="questions">
        <form method="post">
            {% for question in questions %}
                    {{ include('user/_show_question.html.twig', {'question': question}) }}
            {% endfor %}

            <button id="saveResponse" class="btn btn-primary mb-2">Submit button</button>
            
        </form>
    </div>
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}
