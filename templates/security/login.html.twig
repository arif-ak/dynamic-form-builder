{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<form method="post">

    {% if app.user %}

        <h3> Welcome to form builder application (pre-release version) ,  {{ app.user.firstName}} <h3>
        <hr/> 

        <div class="form-row text-center"> 
            
            <div class="col-8">
                <h4> Select from given roles to go through the application -> <h4>
            </div>
            <div class="col-2">
                <a class="btn btn-sm btn-primary" href="{{ path('dynamic_form_index') }}">View as admin</a>
            </div>
            <div class="col-2">
                <a class="btn btn-sm btn-primary" href="{{ path('dynamic_form_index_user') }}">View as user</a>
            </div>
        </div>

    {% else %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <div class="form-row">
            <div class="col-6">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            </div>
            <div class="col-6">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>
            <div class="col-2 mt-1">
                <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-primary" type="submit">
                    Sign in
                </button>
            </div>
        </div>
    {% endif %}

    
    

    

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    

    </div>
</form>
{% endblock %}
