<form method="post" action="{{ path('dynamic_form_delete', {'id': dynamic_form.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dynamic_form.id) }}">
    <button class="btn">Delete</button>
</form>
