{% extends 'base.html.twig' %}

{% block title %}Edit form{% endblock %}

{% block body %}
    <h1>Edit form</h1>

    {{ include('dynamic_form/_form.html.twig', {'button_label': 'Update'}) }}

    <hr/>

    {% if dynamic_form.images %}
        <div class="form-row m-3"> <h5> Uploaded images</h5> </div>
    {% endif %}

    <div class="form-row m-3">
        {% for image in dynamic_form.images %}
            <div class="col-4 p-1">
                <div class="">
                    {# <a href={{ image.imageUrl }} target="_blank"> </a> #}
                    <img class="" src=/{{ image.thumbnailUrl }}  alt="image">
                </div>
            </div>
        {% else %}
            <div class="form-row m-1"> <h6> No images uploaded for this form </h6> </div>
        {% endfor %}
    </div>

    {# include('dynamic_form/_delete_form.html.twig') #}
{% endblock %}
