{{ form_start(form) }}
    <div class="form-row">
        <div class="col-6">
            {{ form_row(form.title) }}
        </div>
        <div class="col-6">
            {{ form_row(form.description) }}
        </div>
        <div class="col-4">
            {{ form_row(form.regularPrice) }}
        </div>
        <div class="col-4">
            {{ form_row(form.salesPrice) }}
        </div>
        <div class="col-4">
            {{ form_row(form.uniqueId) }}
        </div>
    </div>
    {{ form_row(form.isActive) }}
    <button class="btn btn-success">{{ button_label|default('Save') }}</button>
    <a class="btn btn-dark ml-1" href="{{ path('dynamic_form_index') }}">Back to list</a>

{{ form_end(form) }}
